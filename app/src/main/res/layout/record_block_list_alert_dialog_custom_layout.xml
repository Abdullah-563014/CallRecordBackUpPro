<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="500dp">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recordBlockListAlertDialogTextViewId"
            android:text="Please input your lucky phone number to see your luck."
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/recordBlockListAlertDialogEditTextId"
            android:hint="Type your phone number here..."
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/recordBlockListAlertDialogConfirmButtonId"
            style="@style/ButtonStyle"
            android:text="Confirm"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>